{
  "manifest_version": 2,
  "name": "TinyWE Localizer library dev example",
  "short_name": "TinyWE Localizer",
  "version": "1.0",
  "author": "rugk",

  "description": "A tiny library that translates your HTML file with the WebExtension translation system.",
  "homepage_url": "https://github.com/tinywe/localizer",

  // only for the unit test, we need to load libraries from CDNs
  "content_security_policy": "default-src 'none'; style-src 'self' https://unpkg.com; script-src 'self' https://unpkg.com",

  "permissions": [],
  "applications": {
    "gecko": {
      // minimum version, because of module system
      "strict_min_version": "60.0a1"
    }
  }
}
